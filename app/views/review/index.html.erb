<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

<h1>Burgers Delish</h1>
<h5>Rating: <%=@average%></h5>
<div class="left">
	<%= form_for Comment.new, url: '/new_comment' do |f|%>
		<span>Comment:</span> <%= f.text_area :text, size: "30x10"%>
		<br>
		Rating: <%= f.select :rating, options_for_select([5,4,3,2,1])%>
		<%= f.submit 'Post' %>
	<%end%>
</div>

<div class="right">
	<h2>Past Reviews</h2>
	<% @comment.each do |x|%>
		<p>
			"<%=x.text%>"
			<br>
			Rating: <%=x.rating%>
		</p>
	<%end%>
</div>